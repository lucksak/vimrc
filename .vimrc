execute pathogen#infect()

syntax enable

set background=dark
set t_Co=256
colorscheme gruvbox 

filetype plugin on
filetype indent on

set autoread
set wildmenu
set ruler
set number

set backspace=eol,start,indent
set whichwrap+=<,>,h,l

set smartcase
set ignorecase

set incsearch
set showmatch

set encoding=utf8

set nobackup
set nowb
set noswapfile

set smarttab
set shiftwidth=4
set tabstop=4

set ai "Auto indent
set si "Smart indent
set wrap "Wrap lines


